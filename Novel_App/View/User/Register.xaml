<Page x:Class="Novel_App.ViewModel.User.Register"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Novel_App.ViewModel.User"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Register">
    <Grid Background="White">
        <StackPanel HorizontalAlignment="Center" Width="300">
            <TextBlock Text="Register an Account" FontSize="18" FontWeight="Bold" TextAlignment="Center" Margin="0,0,0,10"/>

            <TextBlock Text="Username:" />
            <TextBox Text="{Binding UserName, UpdateSourceTrigger=PropertyChanged}" />

            <TextBlock Text="Password:" />
            <PasswordBox x:Name="PasswordBox" PasswordChanged="PasswordBox_PasswordChanged" />

            <TextBlock Text="Confirm Password:" />
            <PasswordBox x:Name="ConfirmPasswordBox" PasswordChanged="ConfirmPasswordBox_PasswordChanged" />

            <TextBlock Text="Full Name:" />
            <TextBox Text="{Binding FullName, UpdateSourceTrigger=PropertyChanged}" />

            <TextBlock Text="Email:" />
            <TextBox Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}" />

            <TextBlock Text="Phone Number:" />
            <TextBox Text="{Binding NumberPhone, UpdateSourceTrigger=PropertyChanged}" />

            <TextBlock Text="Date of Birth:" />
            <DatePicker SelectedDate="{Binding DateOfBirth, UpdateSourceTrigger=PropertyChanged}" />

            <TextBlock Text="Gender:" />
            <ComboBox SelectedValue="{Binding Gender, UpdateSourceTrigger=PropertyChanged}" 
          SelectedValuePath="Content">
                <ComboBoxItem Content="Male" />
                <ComboBoxItem Content="Female" />
                <ComboBoxItem Content="Other" />
            </ComboBox>

            <TextBlock Text="{Binding ErrorMessage}" Foreground="Red" TextAlignment="Center"/>

            <Button Content="Register" Command="{Binding RegisterCommand}" HorizontalAlignment="Center" Margin="10"/>
        </StackPanel>
    </Grid>
</Page>
