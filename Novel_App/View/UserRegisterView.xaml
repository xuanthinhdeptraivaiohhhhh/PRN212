<Page x:Class="Novel_App.View.UserRegisterView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Novel_App.View"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="UserRegisterView">
    <Grid Background="#F4F4F4">
        <Border Padding="20" Background="White" CornerRadius="10" Width="400" HorizontalAlignment="Center" VerticalAlignment="Center" >
            <StackPanel>
                <TextBlock Text="Username" FontWeight="Bold"/>
                <TextBox Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}" 
                         BorderBrush="Gray" BorderThickness="1" />

                <TextBlock Text="Password" FontWeight="Bold"/>
                <PasswordBox x:Name="PasswordBox" PasswordChanged="PasswordBox_PasswordChanged"
                             BorderBrush="Gray" BorderThickness="1" />

                <TextBlock Text="Confirm Password" FontWeight="Bold"/>
                <PasswordBox x:Name="ConfirmPasswordBox" PasswordChanged="ConfirmPasswordBox_PasswordChanged"
                             BorderBrush="Gray" BorderThickness="1" />

                <TextBlock Text="Email" FontWeight="Bold"/>
                <TextBox Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}" 
                         BorderBrush="Gray" BorderThickness="1" />

                <TextBlock Text="Full Name" FontWeight="Bold"/>
                <TextBox Text="{Binding FullName, UpdateSourceTrigger=PropertyChanged}" 
                         BorderBrush="Gray" BorderThickness="1" />

                <TextBlock Text="Phone Number" FontWeight="Bold"/>
                <TextBox Text="{Binding PhoneNumber, UpdateSourceTrigger=PropertyChanged}" 
                         BorderBrush="Gray" BorderThickness="1"/>

                <TextBlock Text="Date of Birth" FontWeight="Bold"/>
                <DatePicker SelectedDate="{Binding DateOfBirth, UpdateSourceTrigger=PropertyChanged}" 
                            BorderBrush="Gray" BorderThickness="1" />

                <TextBlock Text="Gender" FontWeight="Bold"/>
                <ComboBox SelectedItem="{Binding Gender, UpdateSourceTrigger=PropertyChanged}"
                          BorderBrush="Gray" BorderThickness="1" >
                    <ComboBoxItem Content="Male"/>
                    <ComboBoxItem Content="Female"/>
                    <ComboBoxItem Content="Other"/>
                </ComboBox>

                <Button Content="Register" Click="RegisterButton_Click"
                        Background="DodgerBlue" Foreground="White" Padding="10" 
                        FontWeight="Bold" BorderThickness="0" />
            </StackPanel>
        </Border>
    </Grid>
</Page>