<Page x:Class="Novel_App.View.Staff.GenreView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Novel_App.View.Staff"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="View All Genres">

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header & Form -->
        <StackPanel Grid.Row="0" Margin="10">
            <TextBlock Text="View All Genres" FontSize="20" Foreground="Red" FontWeight="Bold" Margin="0,0,0,10"/>

            <StackPanel Orientation="Vertical">
                <StackPanel Orientation="Horizontal" Margin="0,5">
                    <Label Content="ID"/>
                    <TextBox x:Name="txtId" IsReadOnly="True" Width="100" Text="{Binding SelectedGenre.GenreId}"/>

                    <Label Content="Genre Name" Margin="10,0,0,0"/>
                    <TextBox x:Name="txtGenreName" Width="200" Text="{Binding SelectedGenre.GenreName, Mode=TwoWay}"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,10">
                    <Button Content="Refresh" Width="80" Margin="5" Command="{Binding RefreshCommand}"/>
                    <Button Content="Add" Width="80" Margin="5" Command="{Binding AddCommand}"/>
                    <Button Content="Edit" Width="80" Margin="5" Command="{Binding EditCommand}"/>
                    <Button Content="Delete" Width="80" Margin="5" Command="{Binding DeleteCommand}"/>
                </StackPanel>
            </StackPanel>
        </StackPanel>

        <!-- ListView -->
        <ListView Grid.Row="1" ItemsSource="{Binding Genres}" 
                  SelectedItem="{Binding SelectedGenre, Mode=TwoWay}" 
                  Margin="10">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="ID" DisplayMemberBinding="{Binding GenreId}" Width="50"/>
                    <GridViewColumn Header="Genre Name" DisplayMemberBinding="{Binding GenreName}" Width="250"/>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Page>
